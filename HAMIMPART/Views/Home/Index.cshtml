</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $("#sellerRegistration").submit(function () {
                var name = $("#Name").val();
                var email = $("#registrationemail").val();
                var password = $("#registrationpassword").val();
                var phone = $("#MobileNo").val();

                var mydata = { selname: name, selemail: email, selpass: password, selphone: phone, };

                $.ajax({

                    type: "POST",
                    url: '@Url.Action("SaveUser", "Home")',
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(mydata),
                    dataType: "json",
                    success: function (data) {
                        if (data == true) {
                            alert("data insert successfully");
                            $('#regisModel').modal('hide');
                            $("#Name").val("");
                            $("#registrationemail").val("");
                            $("#registrationpassword").val("");
                            $("#MobileNo").val("");

                            $('#Profile tbody tr:last').after('<tr><td>' + name + '</td><td>' + email + '</td></tr>');
                        }
                    },
                });
                return false;
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            $("#loginModel").submit(function () {
                $("#message").html("Logging in...");
                var email = $("#Email").val();
